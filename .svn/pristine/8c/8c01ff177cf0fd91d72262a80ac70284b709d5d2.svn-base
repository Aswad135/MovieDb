@using MovieDb.ViewModels
@model SearchViewModel


@{
    ViewBag.Title = "AdvancedSearch";
}

@section scripts {
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="/Content/Select2/dist/js/select2.js"></script>
    <link href="/Content/Select2/dist/css/select2.css" rel="stylesheet">
<script>    $(document).ready(function () { $(".select2").select2(); });</script>
}


<h2>Advanced Search</h2>

@using (Html.BeginForm("AdvancedSearch", "Movies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <dl>
            <dt>Choose your actor</dt>
            <dd>@Html.DropDownListFor(m => m.ActorName, (SelectList)ViewBag.Actors, htmlAttributes: new { @class = "select2" })</dd>
            <dt>Choose a genre:</dt>
            <dd>@Html.DropDownListFor(m => m.GenreName ,(SelectList)ViewBag.Genres, htmlAttributes: new { @class = "select2" })</dd>
            <dt>In dates from/to:</dt>
            <dd>@Html.DropDownListFor(m => m.DateFrom, (SelectList)ViewBag.DatesFrom, htmlAttributes: new { @class = "select2" })
                @Html.DropDownListFor(m => m.DateTo, (SelectList)ViewBag.DatesTo, htmlAttributes: new { @class = "select2" })</dd>
            <dt>Minimum rate:</dt>
            <dd>@Html.DropDownListFor(m => m.Rate, (SelectList)ViewBag.Rates, htmlAttributes: new { @class = "form-control", @style = "width:70px;" })</dd> 
        </dl>
    </div>

    <input class="btn btn-default2" style="border:1px solid grey;" type="submit" value="Go!" />

}

