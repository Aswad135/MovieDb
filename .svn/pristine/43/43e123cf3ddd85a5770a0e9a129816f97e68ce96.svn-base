@using MovieDb.ViewModels
@model MovieDb.ViewModels.IndexMovieViewModel

@{
    ViewBag.Title = "MovieDb - Home Page";
}




@{ if (Model != null)
    {
        if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
        <h2>By your favorite genre:</h2>
        @Html.Partial("~/Views/Movies/Listed.cshtml", Model.ByFavoriteGenre)
        }
        <hr style="border-color:darkslategrey" />
        <h2>Top Rated:</h2>
        @Html.Partial("~/Views/Movies/Listed.cshtml", Model.TopRated)
    } }


