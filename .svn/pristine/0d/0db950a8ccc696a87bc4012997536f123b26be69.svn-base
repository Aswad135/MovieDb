@model MovieDb.ViewModels.MovieActorViewModel

@{
    ViewBag.Title = "Comments";

    if (Model.Comments != null) {
        foreach (var item in Model.Comments)
        {

        <table>
            <tr >
                <td style="border-color: steelblue;"><h6 class="commenter">@item.User.UserName @item.date.ToString("yyyy-MM-dd")</h6></td>
                <td><h6 style="background-color:lightyellow;width:290px;" class = "sendcomment-box"> @item.Text</h6> </td> 
            </tr>
        </table>

            }


        }

    }


