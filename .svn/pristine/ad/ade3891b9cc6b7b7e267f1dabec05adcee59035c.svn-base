@model MovieDb.ViewModels.MovieViewModel

<div>
<table class="">
    <tr>
    @{ int i = 0; }
        @foreach (var item in Model.Actors)
        {
            <td>
                &#9899;
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            i++;
            if (i % 3 == 0)
            {
            @:</tr><tr>
            }
        }
    </tr>
</table>
</div>