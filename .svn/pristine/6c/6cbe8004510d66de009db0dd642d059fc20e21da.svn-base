body {
    padding-top: 85px;
    padding-bottom: 150px;
}

/* Set padding to keep content from hitting the edges */
.body-content {
    padding-left: 5px;
    padding-right: 15px;
}

/* Override the default bootstrap behavior where horizontal description lists 
   will truncate terms that are too long to fit in the left column 
*/
.dl-horizontal dt {
    white-space: normal;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 280px;
}

/* Főoldal: Index -nél kezdtem*/
div.img {
    border: 1px solid #ccc;
    border-bottom-left-radius: 7px;
    border-bottom-right-radius: 7px;
    float: left;
    width: 142px;
    height: 305px;
    margin: 5% 5% 5% 5%;
}

div.img:hover {
    border: 1px solid #777;
}

div.img img {
 
position: relative;
    float: left;
    width:  140px;
    height: 200px;
    background-position: 50% 50%;
    background-repeat:   no-repeat;
    background-size:     cover;
    margin-bottom: 6%;
}

div.desc {
    padding: 5px;
    text-align: center;
}

h5 {
    
    font-size: medium;
}

h6{
 
    font-size: small;
}

/* Film infói - Details-nél*/

div.descript {
   float: right;
   width: 64%;
}

div.cover {
    
    float:left;
    width:50%;
    
}

div.main {
    padding-bottom: 0.1%; 
}

/*_Layout-nál*/
.mainsearch {
    width: 110px;
    height: 28px;
    margin-top: 11px;
    margin-left: 11px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-right: 1px solid #ccc;
    border-radius: 4px;
    font-size: 13px;
    background-color: white;
    background-image: url('/Content/Images/searchicon.png');
    background-position: 6px -1px; 
    background-repeat: no-repeat;
    padding: 2px 20px 2px 40px;
    -webkit-transition: width 0.4s ease-in-out;
    transition: width 0.4s ease-in-out;
    margin-right:-8px;
}

.mainsearch:focus {
    width: 60%;
}

.searchbutton {
     box-sizing: border-box;
     border: 2px solid #ccc;
     border-left: 0px;
     height: 28px;
     -moz-border-radius-bottomright: 4px;
     -moz-border-radius-topright: 4px;
}



.rating {
     border: 3px solid darkslategrey;
     border-collapse: separate;
     border-radius: 20px;
     width: 140px;
     height: 35px;
}

.star {
    width:15px;
    height:15px;
}

.star:hover {
    width: 20px;
    height: 20px;
}

.usersrating {
    background-color:lightblue;
    border-radius:20px;
    position: center;
}

output { 
  position: absolute;
  background-image: linear-gradient(top, #444444, #999999);
  width: 40px; 
  height: 30px; 
  text-align: center; 
  color: white; 
  border-radius: 10px; 
  display: inline-block; 
  font: bold 15px/30px Georgia;
  bottom: 175%;
  left: 0;
  margin-left: -1%;
}
output:after { 
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  border-top: 10px solid #999999;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  top: 100%;
  left: 50%;
  margin-left: -5px;
  margin-top: -1px;
}

.sendcomment-box {
    width: 300px;
    height: 70px;
    border: 2px solid;
    border-color: darkslategray;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    font-size: small;
    margin-left: -2px;
}

.commenter {
    border: 2px solid;
    border-color: orangered;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    height: 70px;
    width: 120px;
    text-align: center;
    font-family: Gadugi;
    font-style: oblique;
}

.comment {
    border: 2px solid;
    border-color: darkslategrey;
    border-radius: 5px;
}

.commentbutton {
    border: 3px inset;
    border-color: darkslategrey;
    background-color: azure;
}