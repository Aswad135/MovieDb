@model MovieDb.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<h4>@Convert.ToString(string.Format("{0:yyyy}", Model.ReleaseDate))</h4>
<hr />
<div class="main">
    
    <div style="cover">
        <img src="@Html.DisplayFor(model => model.CoverPicture)"
             align="left" width="35%" height="35%" />
    </div>

    <div class="descript">
    <dl >
        <dt>
            Genre: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
           @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>



    </dl>

    @{ if (HttpContext.Current.User.IsInRole("Admin") || HttpContext.Current.User.IsInRole("DataManager"))
        {

            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>

        }
    }

    </div>
</div>

